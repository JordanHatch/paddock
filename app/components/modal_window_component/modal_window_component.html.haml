= turbo_frame_tag 'modal', class: 'turbo-frame turbo-frame--modal',
                           autoscroll: true,
                           data: { controller: 'modal-window' } do
  .modal-window
    .modal-window__background{ data: { action: 'click->modal-window#close' } }
    .modal-window__container
      .modal-window__content.turbo-frame__container
        .turbo-frame__loading
        - if turbo_frame_request? && close_link.present?
          = link_to close_link, class: 'modal-window__close-link',
                                target: '_top',
                                data: { modal_window_target: 'closeLink' } do
            .modal-window__close-icon
            .modal-window__close-label Close
        - if header.present?
          .modal-window__header
            %h1.modal-window__header-label= header
        = content
        - if turbo_frame_request? && actions.present?
          .form-actions.modal-window__actions= actions
