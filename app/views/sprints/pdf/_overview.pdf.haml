%section.overview
  .summary
    %ul.delivery-status
      - Update.delivery_status.values.each do |status|
        %li{'class' => "status-#{status}"}
          .inner
            %span.value= sprint.delivery_status_summary[status] || 0
            %span.label= status.capitalize

  %ul.groups
    - groups.each do |group|
      %li.group
        %span.group-name= group.name
        %ul.teams
          - group.teams_for_sprint(sprint).each do |team|
            %li.team
              %span.team-name=team.name
              = render partial: 'sprints/update_preview', locals: { team: team, update: team.update_for_sprint(sprint) }, formats: [:html]
