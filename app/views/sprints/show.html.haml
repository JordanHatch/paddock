.view.view--sprints-show
  .summary
    %ul.delivery-status
      - Update.delivery_status.values.each do |status|
        %li{'class' => "status-#{status}"}
          %span.value= sprint.delivery_status_summary[status] || 0
          %span.label= status.capitalize

  %ul.groups
    - team_summaries.each do |group, teams|
      %li.group
        %h2= group.name
        %ul.teams
          - teams.each do |team|
            %li
              = link_to update_path(sprint, team) do
                %h3
                  %span= team.name
                = render partial: 'update_preview', locals: { team: team }

  = button_to 'Download as PDF', export_sprint_path(sprint), class: 'button'
