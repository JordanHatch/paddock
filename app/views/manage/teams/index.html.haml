.view.view--manage-teams
  %header.with-actions
    %h1 Teams

  .teams-list
    %ul.groups
      - groups.each do |group|
        %li.group
          .group-details
            %h3= group.name
            .actions
              = link_to 'Add a new team', new_manage_team_path(team, group: group.id), class: 'button button--success button--sm'
          %ul.teams
            - group.teams.each do |team|
              %li.team
                .team-name
                  %span= team.name
                  - if team.start_on.present? && team.start_on > Date.today
                    %span.date
                      from
                      = team.start_on.strftime('%-d %b %Y')
                  - if team.end_on.present?
                    %span.date
                      to
                      = team.end_on.strftime('%-d %b %Y')
                .actions
                  = link_to 'Edit', edit_manage_team_path(team), class: 'button button--sm button--inverted-primary'
