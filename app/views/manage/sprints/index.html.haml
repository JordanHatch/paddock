.manage--sprints
  %header.with-actions
    %h1 Sprints
    .actions
      = link_to 'Add a new sprint', new_manage_sprint_path

  .sprints-list
    .current-sprint
      - if current_sprint.present?
        .sprint
          %h2 Current sprint
          .sprint-details
            .sprint-name=current_sprint.name
            .sprint-date
              = current_sprint.start_on.strftime('%b %e %Y')
              to
              = current_sprint.end_on.strftime('%b %e %Y')
          .sprint-actions
            = link_to 'Edit', edit_manage_sprint_path(current_sprint)

    %ul.all-sprints
      - sprints.each do |sprint|
        = render partial: 'sprint', locals: { sprint: sprint }
