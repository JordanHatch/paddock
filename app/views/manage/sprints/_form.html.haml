= simple_form_for [:manage, form] do |f|
  = f.input :name, required: true
  = f.input :start_on, as: :date, required: true, input_html: { class: 'select-box select-box--lg' }
  = f.input :end_on, as: :date, required: true, input_html: { class: 'select-box select-box--lg' }

  .actions
    = f.submit 'Save'
    .cancel
      or
      = link_to 'cancel', manage_sprints_path
