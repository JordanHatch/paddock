.team-header
  .team-header__content
    .team-header__group
      = team.group.name
    %h2.team-header__name
      = team.name
  .team-header__actions
    - if signed_in_admin?
      = render(Common::ButtonComponent.new(tag: :a,
                                           href: manage_sprint_update_path(sprint, team),
                                           scheme: :warning,
                                           style: :inverted,
                                           data: { turbo_frame: 'modal' })) { 'Danger zone' }
